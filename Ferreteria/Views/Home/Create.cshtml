@model Ferreteria.Models.Venta

@{
    ViewBag.Title = "Nueva Venta";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2>Nueva Venta</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label for="productos" class="control-label col-md-2">Proveedores</label>
            <div class="col-md-10">
                <select id="productos" name="productos" class="form-control" required>
                    @{
                        var listaProductos = ViewBag.ListaProductos;

                        foreach (var item in listaProductos)
                        {
                            <option value="@item.idProducto">@item.nombreProducto</option>
                        }
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.vendedor, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.vendedor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.vendedor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a Lista de Ventas", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
